@{
    ViewData["Title"] = "Forgot Password";
}
@section Style {
    <link rel="stylesheet" href="~/css/forgotpassword.css" asp-append-version="true" />
}
<section class="container forms">
    <div class="form login">
        <div class="form-content">
            <header>Forgot Password</header>
            <hr />
            <form asp-action="ForgotPassword" asp-controller="User" method="post" class="woocommerce-ResetPassword lost_reset_password text-center">
                <p style="color:gray; text-align:left;" class="mb-4">Lost your password? Please enter your email address. You will receive a link to create a new password via email.</p>

                <div class="form-group mb-3">
                    <input name="email" type="email" class="form-control p-3" placeholder="Enter your email" required />
                    <span for="email" class="text-danger"></span>
                </div>
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success mt-3">@ViewBag.Message</div>
                }

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger mt-3">@ViewBag.Error</div>
                }
                <div class="form-group">
                    <input type="submit" value="Send Reset Link" class="btn btn-primary" />
                </div>
            </form>

            
        </div>
    </div>
</section>
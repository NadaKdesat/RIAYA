<!--Blogs-->
<section class="blogs-section">
    <p class="section-title">News & Blogs</p>
    <h2 class="section-subtitle">Latest News Feeds</h2>

    <!-- Swiper Container -->
    <div class="blogs-swiper-wrapper">
        <div class="swiper blogs-swiper">
            <div class="swiper-wrapper">
                @foreach (var blog in ViewBag.LatestBlogs)
                {
                    <div class="swiper-slide">
                        <div class="card card-style04 border-0 primary-shadow border-radius-10 h-100">
                            <div class="card-image">
                                @if (!string.IsNullOrEmpty(blog.ContentUrl))
                                {
                                    <img src="~/images/@blog.ContentUrl" class="border-top-10-radius" alt="@blog.Title">
                                }
                                else
                                {
                                    <img src="~/images/blog-01.jpg" class="border-top-10-radius" alt="@blog.Title">
                                }
                            </div>
                            <div class="card-body p-1-6 p-sm-1-9 pt-2-3">
                                <span class="card-icon font-weight-700">@blog.PublishDate?.ToString("dd MMM")</span>
                                <div class="mb-3">
                                    @if (!string.IsNullOrEmpty(blog.Category))
                                    {
                                        <span class="d-inline-block">
                                            <i class="fa-solid fa-tags text-secondary"></i>
                                            <a href="#!">@blog.Category</a>
                                        </span>
                                    }
                                </div>
                                <h3 class="h4 mb-3">
                                    <a href="/Home/BlogDetails/@blog.Id">@blog.Title</a>
                                </h3>
                                <a href="/Home/BlogDetails/@blog.Id" class="read-more">
                                    read more <i class="fas fa-arrow-right align-middle ms-1"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Custom arrows under carousel -->
            <div class="swiper-custom-nav d-flex justify-content-center mt-4">
                <div class="swiper-button-prev custom-nav-btn me-2"></div>
                <div class="swiper-button-next custom-nav-btn ms-2"></div>
            </div>
        </div>
    </div>
</section>
<!--End Blogs-->
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

    <script>
        var swiper = new Swiper('.blogs-swiper', {
            slidesPerView: 3,
            spaceBetween: 2,
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            breakpoints: {
                // Responsive
                0: {
                    slidesPerView: 1,
                    spaceBetween: 5
                },
                768: {
                    slidesPerView: 2,
                    spaceBetween: 5
                },
                992: {
                    slidesPerView: 3,
                    spaceBetween: 5
                }
            },
            loop: true,
            centeredSlides: false,
        });
    </script>

}


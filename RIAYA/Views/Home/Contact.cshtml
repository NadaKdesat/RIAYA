@model RIAYA.Models.Contact
@{
    ViewData["Title"] = "Contact Us";
}
@section Style {
    <link rel="stylesheet" href="~/css/contact.css" asp-append-version="true" />
}

<section class="contact-us">
    <h1>Contact Us</h1>
</section>
<!--end contact-header-->
<!--container-->
<div class="container">
    <div class="form-container">
        <div class="form">
            <form asp-action="Contact" asp-controller="Home" method="post">
                @Html.AntiForgeryToken()

                <label asp-for="FullName"></label>
                <input type="text" asp-for="FullName" class="form-control" placeholder="Full Name" />
                <span asp-validation-for="FullName" class="text-danger"></span>

                <label asp-for="Email"></label>
                <input type="email" asp-for="Email" class="form-control" placeholder="Email Address" />
                <span asp-validation-for="Email" class="text-danger"></span>

                <label asp-for="Subject"></label>
                <input type="text" asp-for="Subject" class="form-control" placeholder="Subject" />
                <span asp-validation-for="Subject" class="text-danger"></span>

                <label asp-for="Message"></label>
                <textarea asp-for="Message" class="form-control" placeholder="Message"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
                @if (!string.IsNullOrEmpty(ViewBag.Success))
                {
                    <div class="alert alert-success mt-3">@ViewBag.Success</div>
                }
                <button type="submit">Send Message</button>
            </form>
        </div>

        <div class="info">
            <h5>Contact Us</h5>
            <h2>Get In Touch</h2>
            <p>
                Have questions or need assistance? Reach out to us anytime, and we will get back to you as soon as
                possible.
            </p>
            <div class="grid">
                <div class="info-details">
                    <img src="~/images/phone-call (1).png" alt="phone">
                    <div>
                        <span>Call Us</span>
                        <p>0777777777</p>
                    </div>
                </div>

                <div class="info-details">
                    <img src="~/images/email (4).png" alt="email">
                    <div>
                        <span>Email Us</span>
                        <p>support@riaya.com</p>
                    </div>
                </div>

                <div class="info-details">
                    <img src="~/images/location (2).png" alt="location">
                    <div>
                        <span>Address</span>
                        <p>1234 Main Street, Amman,<br> Jordan</p>
                    </div>
                </div>

                <div class="info-details">
                    <img src="~/images/family-time.png" alt="time">
                    <div>
                        <span>Working Hours</span>
                        <p style="font-size: 12px; margin-bottom: 10px;">
                            &bull; Service Availability: 24/7 for healthcare services and
                            emergencies.<br>&bull; Customer Support Hours: Sunday to Thursday, 9:00 AM - 6:00 PM
                            (excluding holidays).
                        </p>
                    </div>
                </div>
            </div>
            <h3 class="Follow-Us">Follow Us On</h3>
            <div class="social-icon">
                <a href="#"><i class="fa-brands fa-facebook-f"></i></a>
                <a href="#"><i class="fa-brands fa-instagram"></i></a>
                <a href="#"><i class="fa-brands fa-linkedin-in"></i></a>
            </div>
        </div>
    </div>


</div>
<div class="map">
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3363.009728827796!2d35.849668799999996!3d32.5525856!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x151c7715f2c2e7ab%3A0x51755840c8ddbefd!2sOrange%20Digital%20Village%20Irbid!5e0!3m2!1sar!2sjo!4v1737925165891!5m2!1sar!2sjo"
            width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"></iframe>
</div>
<!--end Values-->
